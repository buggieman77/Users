{
   "PHP MySQL DB Skeleton": {
      "prefix": "mysqldb",
      "body": [
         "// Get host name",
         "\\$host = \\$_SERVER[\"HTTP_HOST\"];",
         "// Database name",
         "\\$dbName = \"${1}\";",
         "// Database table name",
         "\\$tableName = \"${2}\";",
         "",
         "// Connect to database",
         "\\$db = mysqli_connect(\\$host, \"root\", \"\", \\$dbName);",
         "",
         "// Get data from database",
         "\\$datas = mysqli_query(\\$db, \"SELECT * FROM \\$tableName\");",
         "// datas validation",
         "if(!\\$datas){",
         "   echo mysqli_error(\\$db);",
         "   exit;",
         "}",
         "",
         "${0}",
      ],
      "description": "PHP MySQL DB Skeleton"
   },
}