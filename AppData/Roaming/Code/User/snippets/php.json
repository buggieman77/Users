{
   "MySQL DB function": {
      "prefix": "mysqldbfunction",
      "body": [
         "function mysqlDatabase(",
         "   \\$dbName,",
         "   \\$dbTableName,",
         "   string \\$hostname = \"localhost\",",
         "   string \\$username = \"root\",",
         "   string \\$password = \"\",",
         "   ?int \\$port = null,",
         "   ?string \\$socket = null",
         "): array",
         "{",
         "   // Enable MySQLi exceptions",
         "   mysqli_report(MYSQLI_REPORT_ERROR | MYSQLI_REPORT_STRICT);",
         "",
         "   try {",
         "      // Connect to database",
         "      \\$db = mysqli_connect(\\$hostname, \\$username, \\$password, \\$dbName, \\$port,\\$socket);",
         "",
         "      // Get data from database",
         "      \\$result = mysqli_query(\\$db,\"SELECT * FROM \\$dbTableName\");",
         "",
         "      // Fetch database to array",
         "      \\$array = [];",
         "      while(\\$row = mysqli_fetch_assoc(\\$result)){",
         "         \\$array[] = \\$row;",
         "      }",
         "",
         "      // Close connection",
         "      mysqli_close(\\$db);",
         "      return \\$array;",
         "",
         "   } catch (mysqli_sql_exception \\$error) {",
         "      die(\"Database Error: \" . \\$error -> getMessage());",
         "   }",
         "",
         "}"
      ],
      "description": "mysqlDatabase function"
   },
   "Calling MySQL DB Function": {
      "prefix": "mysqldbfunctioncall",
      "body": [
         "require \"mysqldb.php\";",
         "",
         "\\$${1:datas}Index = 1;",
         "\\$${1:datas} = mysqlDatabase(\"${2:database name}\",\"${3:database table name}\");${0}",
      ],
      "description": "calling mysqlDatabase"
   },
}