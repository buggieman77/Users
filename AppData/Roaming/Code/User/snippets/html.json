   "PHP MYSQL DELETE": {
      "prefix": "mysqldb",
      "body": [
         "<form",
         "  action=\"\"",
         "  method=\"post\"",
         "  style=\"display:inline\"",
         "  data-${2:field}='<?= htmlspecialchars(json_encode(\\$${1:data}[\"${2:field}\"]), ENT_QUOTES, \"UTF-8\") ?>'",
         "  onsubmit=\"",
         "  let ${2:field} = htmlDecode(JSON.parse(this.dataset.${2:field}));",
         "  return confirm('want to delete ' + ${2:field} + ' ?')\"",
         ">",
         "     <input type=\"hidden\" name=\"id\" value=\"<?= \\$${1:data}[\"id\"] ?>\">",
         "     <input type=\"hidden\" name=\"${2:field}\" value=\"<?= (\\$${1:data}[\"${2:field}\"]) ?>\">",
         "     <input type=\"hidden\" name=\"action\" value=\"delete\">",
         "     <button type=\"submit\">DELETE</button>",
         "</form>",
         "",
         "<script>",
         "  function htmlDecode(input) {",
         "  let element = document.createElement('textarea');",
         "  element.innerHTML = input;",
         "  return element.value;",
         "  }",
         "</script>"
      ],
      "description": "BUTTON MYSQL DELETE"
   },
