{
   "FORM ELEMENT TAG": {
      "prefix": "formel",
      "body": [
         "<label for=\"${1:label}\">${0}${1:label name} :</label>\n<input type=\"text\" id=\"${1:label}\" placeholder=\"${1:label}\" name=\"${1:label}\" required>"
      ],
      "description": "Form Element"
   },
   "HIDDEN INPUT ELEMENT TAG": {
      "prefix": "formel",
      "body": [
         "<input type=\"hidden\" name=\"${1:action}\" value=\"${2}\">${0}"
      ],
      "description": "Form Element"
   },
   "SUBMIT BUTTON ": {
      "prefix": "formel",
      "body": [
         "<button type=\"submit\" name=\"submit\">${0}</button>"
      ],
      "description": "Form Element"
   },
   "TABLE TAG": {
      "prefix": "table",
      "body": [
         "<table border=\"1\" cellpadding=\"10\" cellspacing=\"0\">",
         "   ${0}",
         "</table>"
      ],
      "description": "table tag"
   },
   "PHP TAG": {
      "prefix": "php",
      "body": [
         "<?php",
         "",
         "${0}",
         "",
         "?>"
      ],
      "description": "insert php tag"
   },
   "PHP ECHO TAG": {
      "prefix": "php",
      "body": [
         "<?= \\$${0} ?>"
      ],
      "description": "insert php echo"
   },
   "CREATE FORM ACCESS BUTTON": {
      "prefix": "mysql",
      "body": [
         "<form action=\"add-${1:data}\" method=\"post\">",
         "   <input type=\"hidden\" name=\"action\" value=\"create\">",
         "   <button type=\"submit\">Add New ${1:Data}${0}</button>",
         "</form>"
      ],
      "description": "CREATE MYSQL DATABASE BUTTON"
   },
   "CREATE FORM SKLETON": {
      "prefix": "mysql",
      "body": [
         "<form method=\"post\" >",
         "   <input type=\"hidden\" name=\"action\" value=\"create\">",
         "   <label for=\"${1}\">${1} :</label>",
         "   <input type=\"text\" id=\"${1}\" placeholder=\"${1}\" name=\"${1}\" required>",
         "   <button type=\"submit\" name=\"submit\">${0:Create}</button>",
         "</form>"
      ],
      "description": "CREATE MYSQL DATABASE BUTTON"
   },
   "READ (SHOWING)": {
      "prefix": "mysql",
      "body": [
         "<?php foreach (\\$${1:data}s as \\$index => \\$${1:data}) : ?>",
         "   <?php ++\\$index ?>",
         "   ${0}",
         "<?php endforeach ?>"
      ],
      "description": "SHOW MYSQL DATABASE"
   },
   "UPDATE FORM ACCESS BUTTON": {
      "prefix": "mysql",
      "body": [
         "<form",
         "action = \"update-data\"",
         "method = \"post\"",
         "data-action = \"update\"",
         "data-name = \"<?= htmlspecialchars(json_encode(\\$${1:data}[\"${2}\"]), ENT_QUOTES, \"UTF-8\") ?>\"",
         "onsubmit = \"return showConfirm(this.dataset.action, this.dataset.name)\"",
         ">",
         "   <input type=\"hidden\" name=\"id\" value=\"<?= \\$${1:data}[\"id\"] ?>\">",
         "   <input type=\"hidden\" name=\"action\" value=\"update\">",
         "   <button type=\"submit\">${3:EDIT}${0}</button>",
         "</form>"
      ],
      "description": "CREATE MYSQL DATABASE BUTTON"
   },
   "UPDATE FORM SKLETON": {
      "prefix": "mysql",
      "body": [
         "<form method=\"post\" >",
         "   <input type=\"hidden\" name=\"id\" value=\"<?= \\$_POST[\"id\"] ?>\" >",
         "   <input type=\"hidden\" name=\"action\" value=\"update\">",
         "   <label for=\"${1}\">${1} :</label>",
         "   <input type=\"text\" id=\"${1}\" placeholder=\"${1}\" name=\"${1}\" value=\"<?= \\$${2:data}[\"${1}\"] ?>\" required>",
         "   <button type=\"submit\" name=\"submit\">${0:Update}</button>",
         "</form>"
      ],
      "description": "CREATE MYSQL DATABASE BUTTON"
   },
   "DELETE ACCESS BUTTON": {
      "prefix": "mysql",
      "body": [
         "<form",
         "action = \"delete-${1:data}\"",
         "method = \"post\"",
         "data-action = \"delete\"",
         "data-name = \"<?= htmlspecialchars(json_encode(\\$${2:data}[\"${3:title}\"]), ENT_QUOTES, \"UTF-8\") ?>\"",
         "onsubmit = \"return showConfirm(this.dataset.action, this.dataset.name)\"",
         ">",
         "   <input type=\"hidden\" name=\"id\" value=\"<?= \\$${2:data}[\"id\"] ?>\">",
         "   <input type=\"hidden\" name=\"${3:title}\" value=\"<?= (\\$${2:data}[\"${3:title}\"]) ?>\">",
         "   <input type=\"hidden\" name=\"action\" value=\"delete\">",
         "   <button type=\"submit\">${0:DELETE}</button>",
         "</form>"
      ],
      "description": "DELETE MYSQL DATABASE BUTTON"
   },
}